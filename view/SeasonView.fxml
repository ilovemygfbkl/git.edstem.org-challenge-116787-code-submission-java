<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>  


<VBox fx:controller="controller.SeasonController" alignment="CENTER" styleClass="background" prefHeight="450.0" prefWidth="350.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1"
       >
    <ImageView fitHeight="225" fitWidth="350" >
        <image>
            <Image url="@/view/NBA_Back.jpg"/>
        </image>
    </ImageView>

    <Button text="Round" onAction="#handleRound" />
    <Button text="Current" onAction="#handleCurrentRound"/>
    <Button text="Game" onAction="#handleGame"/>
    <Button text="Result" onAction="#handleResult"/>
    <Button text="Close" onAction="#handleClose" fx:id="closeButton"/>

    <padding>
        <Insets bottom="10"/>
    </padding>

    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
    
</VBox>
