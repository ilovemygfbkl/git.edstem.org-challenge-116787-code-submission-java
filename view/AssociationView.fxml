<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="controller.AssociationController" styleClass="background" prefHeight="420.0" prefWidth="600.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1"
      >
    <ImageView fitHeight="210" fitWidth="600" >
        <image>
            <Image url="@/view/NBA_Back.jpg"/>
        </image>
    </ImageView>
    
    <HBox style="-fx-padding: 5;">
        <Button text="Explore the teams" onAction="#exploreTeams"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Arange a new season" onAction="#newSeason"/>

    </HBox>
    <HBox alignment="center">
        <Button text="Exit" onAction="#exit"/>
    </HBox>
    
    
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>