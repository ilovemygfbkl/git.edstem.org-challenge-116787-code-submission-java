<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>	
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.*?> 
<?import javafx.geometry.*?>

<VBox fx:controller="controller.AddTeamController" alignment="CENTER" styleClass="background" prefHeight="400.0" prefWidth="600.0" spacing="20" 
       xmlns:fx="http://javafx.com/fxml/1" >
    <padding>
        <Insets top="10" bottom="10" left="5" right="5" />
    </padding>
   
    <GridPane fx:id="gridPane" alignment="center" style="-fx-padding: 10;">
        <Label text="Team Details" styleClass="label-h2" GridPane.columnSpan="2" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

        <TextField fx:id="teamNameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/> 
    </GridPane>

   <Button text="Add" onAction="#handleAddTeam" fx:id="button" alignment="center"/>
    
   
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>

